# Continuità Assistenziale Application - Environment Variables Configuration
# Copy this file to .env and fill in the actual values for your environment

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME="Continuità Assistenziale"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Europe/Rome

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=continuita_assistenziale
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Optional: Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_QUEUE_TIMEOUT=60

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
CACHE_DRIVER=redis
CACHE_TTL=3600

# Redis Cache Settings
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DATABASE=0

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ============================================================================
# MAIL CONFIGURATION
# ============================================================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=info@continuita-assistenziale.it
MAIL_FROM_NAME="Continuità Assistenziale"

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
APP_KEY=base64:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Password reset token expiration (in minutes)
PASSWORD_RESET_TIMEOUT=60

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_PREFIX=/api/v1
API_DEBUG=true
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=60

# ============================================================================
# AREU INTEGRATION
# ============================================================================
AREU_API_URL=https://api.areu.example.com
AREU_API_KEY=
AREU_API_SECRET=
AREU_TIMEOUT=30

# ============================================================================
# GUARDIA MEDICA / 116117 SERVICE INTEGRATION
# ============================================================================
SERVICE_NAME=Guardia Medica - 116117
SERVICE_CODE=116117
SERVICE_REGION=Lombardia

# Emergency dispatch settings
DISPATCH_TIMEOUT=300
DISPATCH_RETRY_ATTEMPTS=3
DISPATCH_RETRY_DELAY=10

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
UPLOAD_DRIVER=local
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,xlsx
UPLOAD_STORAGE_PATH=storage/uploads

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_DAILY=true
LOG_MAX_FILES=14

# ============================================================================
# SENTRY ERROR TRACKING (Optional)
# ============================================================================
SENTRY_ENABLED=false
SENTRY_DSN=

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================
QUEUE_DRIVER=redis
QUEUE_CONNECTION=default

# ============================================================================
# SEARCH ENGINE CONFIGURATION (Optional)
# ============================================================================
SEARCH_DRIVER=elasticsearch
ELASTICSEARCH_HOST=127.0.0.1
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=continuita_assistenziale

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# SMS Service (e.g., Twilio)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=
SMS_AUTH_TOKEN=
SMS_FROM_NUMBER=

# Geolocation Service
GEOCODING_ENABLED=true
GEOCODING_PROVIDER=google
GOOGLE_MAPS_API_KEY=

# ============================================================================
# MONITORING & PERFORMANCE
# ============================================================================
PERFORMANCE_MONITORING_ENABLED=false
PERFORMANCE_LOG_THRESHOLD=1000

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_MOBILE_APP=true
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_MULTILINGUAL=true
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_PUSH_NOTIFICATIONS=false

# ============================================================================
# AUDIT & COMPLIANCE
# ============================================================================
AUDIT_LOGGING_ENABLED=true
DATA_RETENTION_DAYS=365
GDPR_COMPLIANCE=true

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
DEBUGBAR_ENABLED=false
IDE_KEY=PHPSTORM
