# ============================================================================
# PORTARE AREU - Express Backend Environment Variables
# Copy this file to .env and configure with your actual values
# ============================================================================

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV=development
APP_NAME=portare-areu-backend
APP_VERSION=1.0.0
LOG_LEVEL=debug
PORT=3000

# ============================================================================
# DATABASE CONFIGURATION - PostgreSQL
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portare_areu_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000

# SSL Connection (set to true in production)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# ============================================================================
# REDIS CACHE CONFIGURATION
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TIMEOUT=5000

# Cache TTL (Time To Live) in seconds
REDIS_CACHE_TTL=3600
REDIS_SESSION_TTL=86400

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key
JWT_REFRESH_EXPIRES_IN=7d

# Token settings
JWT_ISSUER=portare-areu
JWT_AUDIENCE=portare-areu-users

# ============================================================================
# API SETTINGS
# ============================================================================
API_VERSION=v1
API_PREFIX=/api
API_PORT=3000
API_HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:8080
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# AREU INTEGRATION ENDPOINTS
# ============================================================================
# AREU API Base URL
AREU_API_BASE_URL=https://api.areu.example.com
AREU_API_TIMEOUT=10000
AREU_API_VERSION=v1

# AREU Authentication Credentials
AREU_API_KEY=your_areu_api_key_here
AREU_API_SECRET=your_areu_api_secret_here
AREU_CLIENT_ID=your_areu_client_id
AREU_CLIENT_SECRET=your_areu_client_secret

# AREU Service Endpoints
AREU_ENDPOINT_DISPATCH=/dispatch
AREU_ENDPOINT_AMBULANCES=/ambulances
AREU_ENDPOINT_STATIONS=/stations
AREU_ENDPOINT_CALLS=/emergency-calls
AREU_ENDPOINT_TRACKING=/vehicle-tracking
AREU_ENDPOINT_INCIDENTS=/incidents
AREU_ENDPOINT_RESOURCES=/resources

# AREU Integration Settings
AREU_ENABLE_SYNC=true
AREU_SYNC_INTERVAL=300000
AREU_RETRY_ATTEMPTS=3
AREU_RETRY_DELAY=1000

# ============================================================================
# TELEMEDICINA SERVICE CONFIGURATION
# ============================================================================
# Telemedicina API Settings
TELEMEDICINA_API_BASE_URL=https://telemedicina.example.com
TELEMEDICINA_API_VERSION=v1
TELEMEDICINA_API_TIMEOUT=15000

# Authentication
TELEMEDICINA_API_KEY=your_telemedicina_api_key_here
TELEMEDICINA_API_SECRET=your_telemedicina_api_secret_here

# Service Endpoints
TELEMEDICINA_ENDPOINT_APPOINTMENTS=/appointments
TELEMEDICINA_ENDPOINT_CONSULTATIONS=/consultations
TELEMEDICINA_ENDPOINT_MEDICAL_RECORDS=/medical-records
TELEMEDICINA_ENDPOINT_PRESCRIPTIONS=/prescriptions
TELEMEDICINA_ENDPOINT_USERS=/users
TELEMEDICINA_ENDPOINT_DOCTORS=/doctors
TELEMEDICINA_ENDPOINT_AVAILABILITY=/availability

# Video Conference Settings
TELEMEDICINA_VIDEO_PROVIDER=jitsi
TELEMEDICINA_VIDEO_SERVER_URL=https://meet.example.com
TELEMEDICINA_VIDEO_API_KEY=your_video_api_key_here

# WebRTC Configuration
TELEMEDICINA_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
TELEMEDICINA_TURN_SERVER=turn:turn.example.com:3478
TELEMEDICINA_TURN_USERNAME=turnuser
TELEMEDICINA_TURN_PASSWORD=turnpassword

# Recording Settings
TELEMEDICINA_ENABLE_RECORDING=true
TELEMEDICINA_RECORDING_STORAGE=s3
TELEMEDICINA_MAX_SESSION_DURATION=3600

# Integration Settings
TELEMEDICINA_ENABLE_SYNC=true
TELEMEDICINA_SYNC_INTERVAL=600000
TELEMEDICINA_RETRY_ATTEMPTS=3
TELEMEDICINA_RETRY_DELAY=2000

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM_NAME=PORTARE AREU
MAIL_FROM_EMAIL=noreply@portare-areu.example.com
MAIL_SECURE=true

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================
# S3 / AWS Configuration
AWS_REGION=eu-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=portare-areu-storage
AWS_S3_URL=https://s3.amazonaws.com

# Local storage fallback
STORAGE_TYPE=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE=52428800

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Encryption
ENCRYPTION_KEY=your_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-cbc

# API Security Headers
ENABLE_HELMET=true
ENABLE_CORS_PROTECTION=true

# Session Configuration
SESSION_SECRET=your_session_secret_key_here
SESSION_MAX_AGE=86400000

# ============================================================================
# LOGGING AND MONITORING
# ============================================================================
LOG_FORMAT=json
LOG_OUTPUT=console
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=14

# Sentry Error Tracking
SENTRY_ENABLED=false
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=development

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# SMS Service (for notifications)
SMS_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key
SMS_ACCOUNT_SID=your_account_sid
SMS_AUTH_TOKEN=your_auth_token
SMS_FROM_NUMBER=+1234567890

# Push Notifications
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_AREU_INTEGRATION=true
FEATURE_TELEMEDICINA=true
FEATURE_VIDEO_CALLS=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true

# ============================================================================
# DEVELOPMENT SETTINGS (for development environment only)
# ============================================================================
DEBUG=portare-areu:*
ALLOW_TEST_REQUESTS=false
MOCK_EXTERNAL_SERVICES=false

# Database seed data
SEED_DATABASE=false
SEED_DATA_PATH=./seeds

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
